{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets": [
        "src/assets"
      ],
      "@components": [
        "src/components"
      ],
      "@features": [
        "src/features"
      ],
      "@language": [
        "src/language"
      ],
      "@screens": [
        "src/screens"
      ],
      "@styles": [
        "src/styles"
      ],
      "@types": [
        "src/types"
      ],
      "@utils": [
        "src/utils"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
